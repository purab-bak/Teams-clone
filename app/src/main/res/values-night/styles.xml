<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkGrey</item>

    </style>

    <style name="NotificationUIText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/transparent_75_white</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

    <style name="EditScreenTextInputLayoutStyleDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/darkGrey</item>
        <item name="colorControlActivated">@color/darkGrey</item>
        <item name="colorControlHighlight">@color/darkGrey</item>
        <item name="colorAccent">@color/darkGrey</item>
        <item name="android:textColorHint">@color/darkGrey</item>
    </style>

    <style name="navigationTheme">

        <item name="android:statusBarColor">@color/darkGrey</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlHighlight">@color/darkGrey</item>

    </style>

</resources>
