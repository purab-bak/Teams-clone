<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/darkGrey"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_user" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/senderNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageCardView"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/calibri"
        android:text="User Name"
        android:textColor="@color/darkGrey"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/grey"
        android:layout_below="@id/senderNameItem"
        android:layout_toEndOf="@id/imageCardView"
        android:id="@+id/messageCardView">
        <TextView
            android:id="@+id/messageItem"
            android:layout_margin="8dp"
            android:textColor="@color/darkGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesasadasdadada \n\n\n\n\n"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/messageDateEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageCardView"
        android:text="date time"
        android:fontFamily="@font/calibri"
        android:layout_toEndOf="@id/imageCardView"/>


</RelativeLayout>